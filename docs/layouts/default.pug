doctype html
html
  head
    meta(charset='utf-8')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    title #{title} - #{site.title} | #{site.description}

    each file in stylesheets
      link(type='text/css', href='/assets/stylesheets/' + file, rel='stylesheet')

    script.
      (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
      function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
      e=o.createElement(i);r=o.getElementsByTagName(i)[0];
      e.src='//www.google-analytics.com/analytics.js';
      r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
      ga('create','#{google_analytics}');ga('send','pageview');
  body
    main.container
      h1= title
      block content
        .content!= content
    block footer
      footer#footer.container
        p // footer default
    block scripts
      each file in javascripts
        script(src='/assets/javascripts/' + file)
